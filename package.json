{
  "name": "angular2-start",
  "version": "2.0.0",
  "description": "Angular 2 starter project inspired by: Angular 2 Universal starter kit by @AngularClass",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisissoon/angular2-start.git"
  },
  "scripts": {
    "postinstall": "typings install && npm run clean:ng2",
    "clean": "rm -r -f dist",
    "clean:ng2": "rm -r -f node_modules/angular2/manual_typings node_modules/angular2/bundles/typings node_modules/angular2/typings",
    "mkdist": "mkdir dist dist/src",
    "copy:src": "npm run mkdist && cp -r src/assets dist/src && cp system.conf.js src/index.html dist/src && find src/ -name '*.css' -exec rsync -R {} dist/ \\; && find src/ -name '*.html' -exec rsync -R {} dist/ \\;",
    "less": "find src/ -name '*.less' -exec lessc {} {}.css \\; && find src/ -name '*.less.css' -exec bash -c 'mv \"$0\" \"${0%\\.less.css}.css\"' {} \\;",
    "prestart": "npm run build",
    "start": "forever dist/src/server.js",
    "prestart:daemon": "npm run build",
    "start:daemon": "forever start dist/src/server.js",
    "restart": "forever restart dist/src/server.js",
    "stop": "forever stop dist/src/server.js",
    "prewatch": "npm run start:daemon",
    "watch": "gaze 'npm run build && npm restart' 'src/**/*.ts' 'src/**/*.less' 'src/**/*.html' & forever logs -f 0",
    "build": "npm run clean && npm run copy:src && npm run less && tsc",
    "pretest": "rm -r -f coverage && npm run start:daemon",
    "test": "karma start",
    "posttest": "npm run stop && node_modules/.bin/remap-istanbul -i coverage/coverage-final.json -o coverage/lcov.info -t lcovonly && node_modules/.bin/remap-istanbul -i coverage/coverage-final.json -o coverage/html -t html && node_modules/.bin/remap-istanbul -i coverage/coverage-final.json -o coverage/coverage.txt -t text && cat coverage/coverage.txt",
    "e2e": "bash ./test-e2e.sh",
    "lint": "tslint $(glob 'src/**/*.ts')",
    "minify:js": "uglifyjs dist/src/app/app.js -m --compress='sequences,properties,dead_code,drop_debugger,conditionals,comparisons,booleans,unused,if_return,join_vars,warnings,drop_console' --preamble '/*! '$npm_package_name' - v'$npm_package_version' - '$(date +%Y-%m-%d)' */' --output dist/src/app/app.min.js"
  },
  "license": "MIT",
  "contributors": [
    "SOON_ <dorks@thisissoon.com>",
    "Ed Opare-Aryee <ed@thisissoon.com>"
  ],
  "dependencies": {
    "angular2": "2.0.0-beta.9",
    "angular2-universal-preview": "0.70.8",
    "bootstrap": "3.3.6",
    "css": "2.2.1",
    "es6-shim": "0.33.3",
    "es6-module-loader": "0.17.11",
    "express": "4.13.4",
    "lodash": "4.6.0",
    "parse5": "1.5.0",
    "preboot": "1.1.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.2",
    "xhr2": "0.1.3",
    "zone.js": "0.5.15"
  },
  "devDependencies": {
    "cli-glob": "~0.1.0",
    "coveralls": "~2.11.8",
    "forever": "~0.15.1",
    "gaze-cli": "~0.2.0",
    "jasmine-core": "~2.4.1",
    "karma": "~0.13.22",
    "karma-chrome-launcher": "~0.2.2",
    "karma-coverage": "~0.5.5",
    "karma-jasmine": "~0.3.7",
    "karma-phantomjs-launcher": "~1.0.0",
    "karma-spec-reporter": "0.0.24",
    "less": "~2.6.0",
    "phantomjs-prebuilt": "~2.1.4",
    "protractor": "~3.1.1",
    "remap-istanbul": "~0.5.1",
    "systemjs": "~0.19.24",
    "systemjs-builder": "~0.15.10",
    "traceur": "0.0.93",
    "tslint": "~3.5.0",
    "typescript": "~1.8.7",
    "typings": "~0.7.7",
    "uglify-js": "~2.6.2"
  }
}
